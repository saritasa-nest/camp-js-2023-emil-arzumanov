# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
end_of_line = lf

[*.css]
indent_style = space

[*.ts]
quote_type = single
indent_style = tab
indent_size = 1

[*.md]
max_line_length = off
trim_trailing_whitespace = false
